# @even rygh
# SOC Platform Configuration
# Copy to .env and adjust for your environment

# Application
APP_NAME="SOC Platform - BYOL Service"
DEBUG=false

# Security - adjust for production
MAX_FILE_SIZE_BYTES=5242880
MAX_LINE_LENGTH=10000
MAX_LINES_PER_FILE=100000
SESSION_TTL_SECONDS=3600

# CORS - update with your frontend URL
CORS_ORIGINS=["http://localhost:3000"]

# Demo dashboard (HTTP Basic)
DEMO_USERNAME="demo"
DEMO_PASSWORD="change-me"

# Simulation abuse protection (/simulate/*)
# Rate limit per IP
# - Default behavior: enabled when DEBUG=false, disabled when DEBUG=true
# - Override behavior explicitly with SIMULATION_RATE_LIMIT_ENABLED=true/false
# Default limits: 12 requests per 30 seconds (~ 2 rounds of all built-in attacks)
# SIMULATION_RATE_LIMIT_ENABLED=true
# SIMULATION_RATE_LIMIT_REQUESTS=12
# SIMULATION_RATE_LIMIT_PERIOD_SECONDS=30
# Optional token gate: if set, requests must include header: X-Simulation-Token
# SIMULATION_TOKEN="change-me"
